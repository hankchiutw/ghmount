{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
